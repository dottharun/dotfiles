# # to change keyboard repeat rate
xset r rate 120 30
xset r rate 300 100

#tmux attach always
if command -v tmux &> /dev/null && [ -n "$PS1" ] && [[ ! "$TERM" =~ screen ]] && [[ ! "$TERM" =~ tmux ]] && [ -z "$TMUX" ]; then
  exec tmux
fi
